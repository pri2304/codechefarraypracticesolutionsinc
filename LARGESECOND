#include <stdio.h>
int solve()
{
    int n, i, m1=0, m2=0;
    scanf("%d", &n);
    int a[n];
    for(i=0; i<n; i++)
    {
        scanf("%d", &a[i]);
    }
    for(i=0; i<n; i++)
    {
        if (a[0]<a[i])
        {
            m2=a[0];
            a[0]=a[i];
        }
        else if(m2<a[i] && a[i]!=a[0])
        {
            m2=a[i];
        }
        
    }
    m1=a[0];
    printf("%d\n", m1+m2);
}
int main() {
int t;
scanf("%d", &t);
while(t--)
{
    solve();
}
	return 0;
}
