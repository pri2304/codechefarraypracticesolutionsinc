#include <stdio.h>
int solve(){
    int n, i, c=0;
    scanf("%d", &n);
    int a[n], b[n];
    for(i=0; i<n; i++)
    {
        scanf("%d ", &a[i]);
    }
    for(i=0; i<n; i++)
    {
        scanf("%d ", &b[i]);
    }
    for(i=0; i<n; i++)
    {
        if(a[i]<=2*b[i] && b[i]<=2*a[i])
        {
            c++;
        }
    }
    printf("%d\n", c);
}
int main(void) {
int t;
scanf("%d", &t);
while(t--)
{
	solve();
}
return 0;
}
